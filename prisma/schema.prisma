model Advertisement {
  id        String   @id @default(cuid())
  imageUrl  String
  link      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  nickname  String?
  avatarUrl String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 